<Window x:Class="FortniteLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FortniteLauncher"
        mc:Ignorable="d"
        Title="Fortnite Season 1 Launcher" Height="450" Width="800" Background="#1E1E1E">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Fortnite Season 1" FontSize="36" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Button x:Name="LaunchButton" Content="Launch Game" Width="200" Height="50" FontSize="18" Click="LaunchButton_Click" Background="#FFE600" Foreground="Black" FontWeight="Bold"/>
            <TextBlock x:Name="StatusText" Text="Ready" Foreground="LightGray" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
