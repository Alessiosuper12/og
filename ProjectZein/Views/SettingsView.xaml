<UserControl x:Class="ProjectZein.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent" Foreground="White">
    <StackPanel Margin="10">
        <TextBlock Text="Impostazioni" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Text="Generali" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,10" Foreground="#007ACC"/>
        <CheckBox Content="Avvia all'accensione" Foreground="White" Margin="0,5"/>
        <CheckBox Content="Minimizza nella tray" Foreground="White" Margin="0,5"/>

        <TextBlock Text="Grafica" FontSize="18" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="#007ACC"/>
        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Tema:" Width="100" VerticalAlignment="Center"/>
            <ComboBox Width="150">
                <ComboBoxItem Content="Scuro" IsSelected="True"/>
                <ComboBoxItem Content="Chiaro"/>
            </ComboBox>
        </StackPanel>

        <TextBlock Text="Account" FontSize="18" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="#007ACC"/>
        <Button Content="Logout" Width="100" HorizontalAlignment="Left" Background="#C42B1C" Foreground="White" BorderThickness="0" Height="30">
             <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
             </Button.Resources>
        </Button>
    </StackPanel>
</UserControl>
