<Window x:Class="FortniteLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Fortnite 1.10 Launcher" Height="450" Width="800" Background="#1E1E1E">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Fortnite 1.10 Launcher" Foreground="White" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Game Path:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="GamePathBox" Width="300" Height="25"/>
                <Button Content="..." Width="30" Height="25" Click="BrowseButton_Click" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Username:" Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <TextBox x:Name="UsernameBox" Width="200" Height="25" Text="Player"/>
            </StackPanel>

            <Button x:Name="DiscordLoginBtn" Content="Login with Discord" Width="200" Height="30" Margin="0,10" Background="#5865F2" Foreground="White" Click="DiscordLoginBtn_Click"/>

            <Button x:Name="LaunchBtn" Content="LAUNCH FORTNITE" Width="200" Height="50" Margin="0,20" Background="#FFE600" FontSize="18" FontWeight="Bold" Click="LaunchBtn_Click"/>

            <TextBlock x:Name="StatusText" Text="Ready" Foreground="Gray" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
